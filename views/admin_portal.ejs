<html lang="en">
  <link rel="stylesheet" href="/css/admin_portal.css">
  <style>

    button {
      box-shadow: 0px 5px 0px 0px #282828;
      background:linear-gradient(to bottom, #eae0c2 5%, #ccc2a6 100%);
      background-color:#ebdbb2;
      border-radius:15px;
      border:2px solid #282828;
      cursor:pointer;
      color:#32302f;
      font-family: 'Montserrat';
      font-size:20px;
      padding:12px 16px;
      text-decoration:none;
      text-shadow:0px 1px 0px #ffffff;
    }
    button:hover {
      background:linear-gradient(to bottom, #ccc2a6 5%, #ebdbb2 100%);
      background-color:#ebdbb2;
    }

    input[type=text] {
      font-family: 'Montserrat';
      font-size:20px;
      padding: 12px 16px;
      margin: 8px 0;
      box-sizing: border-box;
      background-color:#32302f;
      border:1px solid #ebdbb2;
      color: #ebdbb2;
      border-radius:20px;
    }
    form{
      margin-top: 200px;
      margin-left: 450px;
    }
    body{
      overflow:hidden;
    }
    
    #dashboard{
      margin-top: 100px;
      margin-left: 200px;
      width: 850px;
      height: 450px;
      padding: 10px;
      border: 2px solid #ebdbb2;
      border-radius: 15px;
      background-color: #282828;
    }

    #photo{
      width: 200px; 
      height: 200px; 
      margin-top: 125px; 
      margin-left:112.5px;
      border-radius: 15px;
    }

    #info{ 
      font-family: 'Montserrat';
      font-size:20px;
      width:400px;
      height: 200px; 
      margin-top: 25px; 
      margin-left: 400px;
    }

    #label{
      font-size:20px;
      font-weight: 600;
    }

    tr:hover {
      background-color: rgba(0, 0, 0, 0.3);
    }
  </style>


  <body>
    <nav class="menu" tabindex="0">
      <header class="logo">
      <img src="/assets/IIIT_logo_dark.png">
      </header>
      <ul>
        <li class="tablinks" onclick="dashboard()">Dashboard</li>
        <li class="tablinks" onclick="student_edit()">Student</li>
        <li class="tablinks" onclick="faculty_edit()">Faculty</li>
        <li class="tablinks" onclick="admin_edit()">Admin</li>
        <li class="tablinks" onclick="club_edit()">Club</li>
        <li class="tablinks" onclick="research_edit()">Research</li>
        <li class="tablinks" onclick="subjects_edit()">Subjects</li>
        <a href="./logout" style="text-decoration: none; color:#ebdbb2;"><li class="tablinks">Logout</li></a>
      </ul>
    </nav>

    <!-- Dashboard -->
    <div id="dashboard">
      <div id="image" style="float:left">
        <img id="photo" src="<%=photo%>">
      </div>
      <div id="info"  style="float:none">
        <table border="0" cellpadding="15">
          <tbody>
          <tr>
            <td id="label">Admin ID</td>
            <td><%=admin_id%></td>
          </tr>
          <tr>
            <td id="label">First Name</td>
            <td><%=f_name%></td>
          </tr>
          <tr>
            <td id="label">Middle Name</td>
            <td><%=m_name%></td>
          </tr>
          <tr>
            <td id="label">Last Name</td>
            <td><%=l_name%></td>
          </tr>
          <tr>
            <td id="label">Post</td>
            <td><%=post%></td>
          </tr>
          <tr>
            <td id="label">Phone Number</td>
            <td><%=phone%></td>
          </tr>
          <tr>
            <td id="label">Email</td>
            <td><%=Email%></td>
          </tr>
          </tbody>
          </table>
      </div>
    </div>

    <!-- Student -->
    <form
      action="./admin_portal"
      method="POST"
      id="student_form"
      style="display: none;"
    >
      <label for="category">
        <input
          type="text"
          value="student"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="id">
        <input type="text" placeholder="Enter Student ID" name="id" required />
      </label>
      <button type="submit">
      Search
      </button>
    </form>
    
    <!-- Faculty -->
    <form
      action="./admin_portal"
      method="POST"
      id="faculty_form"
      style="display: none;"
    >
      <label for="category">
        <input
          type="text"
          value="faculty"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="id">
        <input type="text" placeholder="Enter Faculty ID" name="id" required />
      </label>
      <button type="submit">Search</button>
    </form>

    <!-- Admin -->
    <form
      action="./admin_portal"
      method="POST"
      id="admin_form"
      style="display: none;"
    >
      <label for="category">
        <input
          type="text"
