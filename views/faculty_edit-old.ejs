<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Faculty Edit</title>
  </head>
  <body>

    <!-- Name -->
    <form action="./faculty_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="name"
          name="category"
          style="display: none;"
        />
      </label>
      <table border="0" cellpadding="3">
        <tbody>
        <tr id="label">
          <td>Faculty ID</td>
          <td>
              <input disabled type="text" value="<%=faculty_id%>" required />
            </label>
          </td>
        </tr>
        <tr id="label">
          <td>First Name</td>
          <td>      
            <label for="f_name">
            <input type="text" value="<%=f_name%>" name="f_name" required />
            </label>
          </td>
        </tr>
        <tr id="label">
          <td>Middle Name</td>
          <td>      
            <label for="m_name">
            <input type="text" value="<%=m_name%>" name="m_name" required />
            </label>
          </td>
        </tr>
        <tr id="label">
          <td>Last Name</td>
          <td>      
            <label for="l_name">
            <input type="text" value="<%=l_name%>" name="l_name" required />
            </label>
          </td>
        </tr>
        <tr>
          <td style="text-align:center; padding: 20px 0 20px 0">
          </td>
          <td style="text-align:center; padding: 20px 0 20px 0">
            <button type="submit">Save Changes</button>
          </td>
        </tr>
        </tbody>
      </table>
    </form>

    <!-- Post & Branch -->
    <form action="./faculty_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="post"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="post">
        <input type="text" value="<%=post%>" name="post" required />
      </label>
      <label for="branch_id">
        <input type="text" value="<%=branch_id%>" name="branch_id" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

    <!-- Gender & DOB -->
    <form action="./faculty_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="gender"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="gender">
        <input type="text" value="<%=gender%>" name="gender" required />
      </label>
      <label for="dob">
        <input type="datetime" value="<%=dob%>" name="dob" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

    <!-- Room Details -->
    <form action="./faculty_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="room"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="room">
        <input type="text" value="<%=room%>" name="room" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

    <!-- Phone & E-mail -->
    <form action="./faculty_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="phone"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="phone">
        <input type="text" value="<%=phone%>" name="phone" required />
      </label>
      <label for="email">
        <input type="text" value="<%=email%>" name="email" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

