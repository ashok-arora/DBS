      </label>
      <label for="dob">
        <input type="text" value="<%=dob%>" name="dob" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

    <!-- CGPA & Semester -->
    <form action="./student_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="cgpa"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="cgpa">
        <input type="text" value="<%=cgpa%>" name="cgpa" required />
      </label>
      <label for="semester">
        <input type="text" value="<%=semester%>" name="semester" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

    <!-- Room Details -->
    <form action="./student_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="room"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="hostel_no">
        <input type="text" value="<%=hostel_no%>" name="hostel_no" required />
      </label>
      <label for="room">
        <input type="text" value="<%=room%>" name="room" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

