  <body>
    <!-- Roll No. -->
    <form action="./student_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="roll"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="roll_no">
        <input type="text" value="<%=roll_no%>" name="roll_no" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

    <!-- Name -->
    <form action="./student_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="name"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="f_name">
        <input type="text" value="<%=f_name%>" name="f_name" required />
      </label>
      <label for="m_name">
        <input type="text" value="<%=m_name%>" name="m_name" required />
      </label>
      <label for="l_name">
        <input type="text" value="<%=l_name%>" name="l_name" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

    <!-- Batch & Branch -->
    <form action="./student_edit" method="POST">
