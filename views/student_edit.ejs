              <td>      
                <label for="branch_id">
                <input disabled type="text" value="<%=branch_id%>" name="branch_id" required />
                </label>
              </td>
            </tr>
            <tr>
              <td style="text-align:center; padding: 20px 0 20px 0">
              </td>
              <td style="text-align:center; padding: 20px 0 20px 0">
                <button type="submit">Save Changes</button>
              </td>
              </tr>
            </tbody>
            </table>

        </form>

