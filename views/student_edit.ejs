        />
      </label>
      <label for="batch_code">
        <input type="text" value="<%=batch_code%>" name="batch_code" required />
      </label>
      <p><%=branch_id%></p>
      <button type="submit">SUBMIT</button>
    </form>

    <!-- Gender & DOB -->
    <form action="./student_edit" method="POST">
