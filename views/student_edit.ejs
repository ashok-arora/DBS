        <!-- Room Details -->
        <form action="./student_edit" method="POST">
          <label for="category">
            <input
              type="text"
              value="backlogs"
              name="category"
              style="display: none;"
            />
          </label>
          <table border="0" cellpadding="3">
              <% if(backlogs.length != 0) { %>
                <% for(let i=0; i<backlogs.length; i++) {%>
                  <tr id="label">
                  <td>Backlog <%=i+1%></td>
                  <td>     
                    <label for="backlogs">
                      <input type="text" value="<%=backlogs[i]%>" name="backlogs" required />
                    </label>
                  </td>
                </tr>
                <% } %>
              <% } %>

            <tr>
              <td style="text-align:center; padding: 20px 0 20px 0">
