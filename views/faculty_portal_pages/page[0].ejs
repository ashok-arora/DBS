<style>
  label {
    margin-right: 5px;
  }

  .LeftContainer {
    flex: 3;
    display: flex;
    flex-direction: column;
    /* background-color: red; */
  }

  .RightContainer {
    flex: 2;
  }

  .LeftContainer div {
    display: flex;
    width: calc(100% - 20px);
    height: 170px;
    padding: 0px 10px;
    border-radius: 1em;
    justify-content: space-between;
    background-color: var(--primary);
    margin-bottom: 20px;
  }

  .RightContainer div {
    margin-left: 20px;
    border-radius: 1em;
    display: flex;
    width: calc(100% - 40px);
    flex-direction: column;
    background-color: var(--primary);
    padding: 10px;
    height: calc(100% - 20px);
  }
</style>
<% var f_name = "Vishnu Sir"; assignment_number = "Assignments"%>
<div style="display: flex; width: 100%; justify-content: space-between;">
  <div class="LeftContainer">
    <div>
      <h1 style="color: var(--secondary);">
        Hello, <%=f_name%>!<br />
        Welcome Back!
      </h1>
      <img src="/assets/man_with_laptop.png" height="150px" />
    </div>
    <div style="height: 300px; padding: 0; width: 100%; flex-direction: column;">
      <div style="
        display: flex;
        flex: 1;
        padding: 0px 30px;
        height: 100%;
        margin: 0;
        width: calc(100% - 60px);
        justify-content: flex-start;
      ">
        <i class="material-icons" style="color: white; font-size: 60px; margin-top: 20px">done_all</i>
        <h2 style="margin-left: 50px; color: var(--secondary);">
          <%=assignment_number%> <br />
        </h2>
      </div>
      <!-- TODO add link in action method -->
      <div style="height: 100%; flex: 2; margin: 0">
        <form action=""; method="POST">
          <label>Subject Code: </label>
          <input type="text"; placeholder="XXXNNNN" name="subjectCode">
          <br><br><label>Assignment Name: </label>
          <input type="text"; placeholder="Assignment Name" name="assignmentName">
          <br><br><label>Due Date:</label>
          <input type="text"; placeholder="Date Format" name="dueDate">
          <br><br><input type="submit"; value="Add" name="action">
          <input type="submit"; value="Remove" name="action">
          <input type="submit"; value="Edit" name="action">
        </form>
      </div>
    </div>
    <div style="
        background-color: var(--primary);
        flex-direction: column;
        height: 200px;
        margin-bottom: 0px;
      ">
      <h2 style="align-self: center; color: var(--secondary);">
        College News
      </h2>
    </div>
  </div>
  <div class="RightContainer">
    <div>
      <h2 style="align-self: center; color: var(--secondary);">
        Upcoming Events!
      </h2>
    </div>
  </div>
</div>