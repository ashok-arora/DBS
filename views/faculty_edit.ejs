<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Faculty Edit</title>
  </head>
  <body>
    <button 
    style=
     "background-color: #282828;
      border: 1px solid #ebdbb2;
      color: #ebdbb2;
      padding: 20px 20px;
      text-align: center;
      font-size: 20px;
      position: absolute;
      top:50px;
      left:80px;
      border-radius: 10px;"
      onclick="window.location.href = '/admin/admin_portal';">
      Back
    </button>
    <!-- Faculty id -->
    <p><%=faculty_id%></p>

    <!-- Name -->
    <form action="./faculty_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="name"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="f_name">
        <input type="text" value="<%=f_name%>" name="f_name" required />
      </label>
      <label for="m_name">
        <input type="text" value="<%=m_name%>" name="m_name" required />
      </label>
      <label for="l_name">
        <input type="text" value="<%=l_name%>" name="l_name" required />
      </label>
      <button type="submit" formnovalidate>SUBMIT</button>
    </form>

    <!-- Post & Branch -->
    <form action="./faculty_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="post"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="post">
        <input type="text" value="<%=post%>" name="post" required />
      </label>
      <label for="branch_id">
        <input type="text" value="<%=branch_id%>" name="branch_id" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

    <!-- Gender & DOB -->
    <form action="./faculty_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="gender"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="gender">
        <input type="text" value="<%=gender%>" name="gender" required />
      </label>
      <label for="dob">
        <input type="datetime" value="<%=dob%>" name="dob" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

    <!-- Room Details -->
    <form action="./faculty_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="room"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="room">
        <input type="text" value="<%=room%>" name="room" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

    <!-- Phone & E-mail -->
    <form action="./faculty_edit" method="POST">
      <label for="category">
        <input
          type="text"
          value="phone"
          name="category"
          style="display: none;"
        />
      </label>
      <label for="phone">
        <input type="text" value="<%=phone%>" name="phone" required />
      </label>
      <label for="email">
        <input type="text" value="<%=email%>" name="email" required />
      </label>
      <button type="submit">SUBMIT</button>
    </form>

